<div class="container container-fluid registerd-libraries">
  <h4 class="page-head">図書館一覧</h4>
  <div class="search-box">
    <p class="my-0">絞り込み</p>
    <%= form_with url:libraries_search_path,method: :get, local: true do |f| %>
      <div class="search-form mb-3">
        <%= f.text_field :keyword, class:"form-control", placeholder:"キーワード",type:"text",size:"30" %>
        <%= f.submit "検索" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% if @libraries.present? %>
      <% @libraries.each do |library| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="libraries-frame-inner">
            <%= link_to library do %>
              <div class="libraries-image-frame">
                <% if library.avatar.attached? %>
                  <%= image_tag library.avatar, alt: '図書館画像', class: "libraries-image" %>
                <% else %>
                  <%= image_tag 'no-image.png', alt: '図書館画像', class: "libraries-image" %>
                <% end %>
              </div>
              <div class="libraries-information">
                <p class="libraries-name"><%= library.name %></p>
                <p class="libraries-address"><%= library.address %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="no-library-notice">
        <p>登録済みの図書館はありません</p>
      </div>
    <% end %>
  </div>
</div> 
